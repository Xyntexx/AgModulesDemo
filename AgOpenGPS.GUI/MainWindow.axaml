<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgOpenGPS.GUI.ViewModels"
        xmlns:converters="using:AgOpenGPS.GUI.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="AgOpenGPS.GUI.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="AgOpenGPS - Precision Agriculture"
        Width="1024" Height="768">

  <Grid RowDefinitions="Auto,*" Margin="10">

    <!-- Header -->
    <Border Grid.Row="0" Background="#2C3E50" Padding="15" Margin="0,0,0,10" CornerRadius="5">
      <TextBlock Text="AgOpenGPS Dashboard" FontSize="24" FontWeight="Bold" Foreground="White"/>
    </Border>

    <!-- Main Content with Tabs -->
    <TabControl Grid.Row="1">

      <!-- Dashboard Tab -->
      <TabItem Header="Dashboard">
        <Grid ColumnDefinitions="2*,*" ColumnSpacing="10">

          <!-- Left Panel - Telemetry -->
          <Border Grid.Column="0" Background="#ECF0F1" CornerRadius="5" Padding="15">
            <Grid RowDefinitions="Auto,Auto,*">

              <!-- Kinematics Data -->
              <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Kinematics" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                <Border Background="White" Padding="10" CornerRadius="3" Margin="0,0,0,5">
                  <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Latitude:" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Grid.Column="1" Text="{Binding Latitude}" FontFamily="Consolas" Foreground="#34495E"/>
                  </Grid>
                </Border>
                <Border Background="White" Padding="10" CornerRadius="3" Margin="0,0,0,5">
                  <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Longitude:" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Grid.Column="1" Text="{Binding Longitude}" FontFamily="Consolas" Foreground="#34495E"/>
                  </Grid>
                </Border>
                <Border Background="White" Padding="10" CornerRadius="3" Margin="0,0,0,5">
                  <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Heading:" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Grid.Column="1" Text="{Binding Heading}" FontFamily="Consolas" Foreground="#34495E"/>
                  </Grid>
                </Border>
                <Border Background="White" Padding="10" CornerRadius="3" Margin="0,0,0,5">
                  <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Speed:" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Grid.Column="1" Text="{Binding Speed}" FontFamily="Consolas" Foreground="#34495E"/>
                  </Grid>
                </Border>
                <Border Background="White" Padding="10" CornerRadius="3">
                  <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="WAS:" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Grid.Column="1" Text="{Binding WasAngle}" FontFamily="Consolas" Foreground="#34495E"/>
                  </Grid>
                </Border>
              </StackPanel>

              <!-- Autosteer Data -->
              <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Autosteer" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                <Border Background="White" Padding="10" CornerRadius="3" Margin="0,0,0,5">
                  <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Steer Angle:" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Grid.Column="1" Text="{Binding SteerAngle}" FontFamily="Consolas" Foreground="#34495E"/>
                  </Grid>
                </Border>
                <Border Background="White" Padding="10" CornerRadius="3">
                  <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Status:" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Grid.Column="1" Text="{Binding AutosteerEngaged, Converter={x:Static converters:BooleanToStringConverter.Instance}}"
                              FontFamily="Consolas" Foreground="#34495E"/>
                  </Grid>
                </Border>
              </StackPanel>

              <!-- Event Log -->
              <StackPanel Grid.Row="2">
                <TextBlock Text="Event Log" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                <Border Background="White" CornerRadius="3" Padding="5">
                  <ListBox ItemsSource="{Binding LogMessages}" Height="200" Background="White">
                    <ListBox.ItemTemplate>
                      <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Consolas" FontSize="11" Foreground="#34495E"/>
                      </DataTemplate>
                    </ListBox.ItemTemplate>
                  </ListBox>
                </Border>
              </StackPanel>

            </Grid>
          </Border>

          <!-- Right Panel - Status & Controls -->
          <StackPanel Grid.Column="1" Spacing="10">

            <Border Background="#3498DB" Padding="15" CornerRadius="5">
              <StackPanel>
                <TextBlock Text="System Status" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <TextBlock Text="All Systems Operational" Foreground="White"/>
              </StackPanel>
            </Border>

            <Border Background="#ECF0F1" Padding="15" CornerRadius="5">
              <StackPanel Spacing="10">
                <TextBlock Text="Quick Actions" FontSize="16" FontWeight="Bold" Foreground="#2C3E50"/>
                <Button Content="{Binding AutosteerButtonText}"
                        Command="{Binding ToggleAutosteerCommand}"
                        HorizontalAlignment="Stretch"
                        Padding="15"
                        FontSize="14"
                        FontWeight="Bold">
                  <Button.Styles>
                    <Style Selector="Button">
                      <Setter Property="Background" Value="#27AE60"/>
                      <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="Button:pointerover">
                      <Setter Property="Background" Value="#229954"/>
                    </Style>
                  </Button.Styles>
                </Button>
              </StackPanel>
            </Border>

          </StackPanel>

        </Grid>
      </TabItem>

      <!-- Modules Tab -->
      <TabItem Header="Modules">
        <Border Background="#ECF0F1" CornerRadius="5" Padding="10">
          <Grid RowDefinitions="Auto,*">

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,8">
              <TextBlock Text="Loaded Modules" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,3"/>
              <TextBlock Text="{Binding ModuleStatusText}" FontSize="10" Foreground="#7F8C8D"/>
            </StackPanel>

            <!-- Module List -->
            <Border Grid.Row="1" Background="White" CornerRadius="3" Padding="5">
              <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Modules}">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Border Background="#F8F9FA" Margin="0,0,0,5" Padding="8" CornerRadius="3" BorderBrush="#BDC3C7" BorderThickness="1">
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="5">

                          <!-- Module Header -->
                          <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                            <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding Version}" FontSize="10" Foreground="#7F8C8D" VerticalAlignment="Center" Margin="8,0,8,0"/>
                            <Border Grid.Column="2" Background="{Binding HealthColor}" Padding="5,2" CornerRadius="2" Margin="0,0,5,0">
                              <TextBlock Text="{Binding HealthText}" FontSize="9" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <TextBlock Grid.Column="3" Text="{Binding MemoryUsage}" FontSize="11" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="4" Text="{Binding State}" FontSize="10" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                          </Grid>

                          <!-- Module Details -->
                          <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto,*">
                            <TextBlock Grid.Column="0" Text="Category:" FontSize="9" Foreground="#95A5A6" Margin="0,0,4,0"/>
                            <TextBlock Grid.Column="1" Text="{Binding Category}" FontSize="9" Foreground="#7F8C8D" Margin="0,0,12,0"/>
                            <TextBlock Grid.Column="2" Text="Loaded:" FontSize="9" Foreground="#95A5A6" Margin="0,0,4,0"/>
                            <TextBlock Grid.Column="3" Text="{Binding LoadedTime}" FontSize="9" Foreground="#7F8C8D"/>
                          </Grid>

                        </Grid>
                      </Border>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </ScrollViewer>
            </Border>

          </Grid>
        </Border>
      </TabItem>

    </TabControl>

  </Grid>

</Window>
